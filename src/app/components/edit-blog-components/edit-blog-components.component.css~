
.btn-sub1, .btn-sub2 {
  margin-top: 5px;
  border-radius: 10px;/* Thêm khoảng cách giữa các button và phần tử phía trên */
}

/* General form styling */
form {
  display: flex; /* Sử dụng flexbox để bố trí các phần tử */
  flex-direction: column; /* Sắp xếp các phần tử theo chiều dọc */
  gap: 1rem; /* Khoảng cách giữa các nhóm input */
  max-width: 900px; /* Giới hạn chiều rộng tối đa của form */
  margin: 2rem auto; /* Căn giữa form */
  padding: 2rem; /* Thêm padding để tạo không gian bên trong form */
  border: 1px solid #ccc; /* Thêm viền cho form */
  border-radius: 5px; /* Bo góc form */
}

/* Input group styling */
nz-input-group {
  display: flex; /* Sử dụng flexbox để bố trí các phần tử trong nhóm input */
  align-items: center; /* Căn giữa các phần tử theo chiều dọc */
  gap: 0.5rem; /* Khoảng cách giữa nhãn và input */
}

/* Label styling */
nz-input-group > span {
  flex-shrink: 0; /* Ngăn nhãn bị co lại khi input quá dài */
  width: 100px; /* Đặt chiều rộng cố định cho nhãn */
  text-align: right; /* Căn phải nhãn */
  margin-right: 1rem; /* Thêm khoảng cách giữa nhãn và input */
}

/* Input and select styling */
input[type="text"],
input[type="file"],
select,
textarea {
  width: 100%; /* Chiếm toàn bộ chiều rộng có sẵn */
  padding: 0.5rem; /* Thêm padding cho input */
  border: 1px solid #ccc; /* Thêm viền cho input */
  border-radius: 3px; /* Bo góc input */
}

/* Radio button and checkbox styling */
input[type="radio"],
input[type="checkbox"] {
  margin-right: 0.5rem; /* Thêm khoảng cách giữa radio/checkbox và nhãn */
}
